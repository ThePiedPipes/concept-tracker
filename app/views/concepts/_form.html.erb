<% form_for @concept, :html => { :multipart => true } do |f| %>
<%= f.error_messages %>

<p>Basic details</p>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :summary %>
<%= f.text_area :summary, :size => 10 %>

<%= f.label :objectives %>
<%= f.text_area :objectives, :size => 10 %>

<p>Checklist from relevant departments</p>

<%= f.label :consulted_legal %>
<%= f.check_box :consulted_legal %>

<%= f.label :consulted_marketing %>
<%= f.check_box :consulted_marketing %>


<%= f.label :design_needed %>
<%= f.check_box :design_needed %>

<%= f.label :moderation_requirement %>
<%= f.check_box :moderation_requirement %>

<%= f.label :subject_to_tx %>
<%= f.check_box :subject_to_tx %>
<div class="spacer"></div>
</fieldset>


<%= f.label :vertical %>
<%= f.text_field :vertical %>
<div class="spacer"></div>


<% if current_user.is_admin? %>
<p>For Admin Only</p>
<%= f.label :status %>
<%= select_from_statuses %>
<div class="spacer"></div>
<% end -%>


<p>Miscellaneous information</p>
<%= f.label :deadline %>
<%= f.date_select :deadline %>
<div class="spacer"></div>

<p>Cost Breakdown</p>
<div id="cost_breakdown">


  <div class="num"> '3rd Party Costs' 
<span class="small">(eg. 1000)</span></div>
<%= f.text_field :est_cost_external, :class => 'num' %>

<%= f.label 'Est Days Development' %>
<%= f.text_field :est_days_dev, :class => 'num' %>

<%= f.label 'Est Days Editorial' %>
<%= f.text_field :est_days_editorial, :class => 'num' %>

<%= f.label 'Est Days Proj. Man.' %>
<%= f.text_field :est_days_pm, :class => 'num' %>

<%= f.label 'Est Days Design' %>
<%= f.text_field :est_days_design, :class => 'num' %>

<%= f.label 'Est Days IA' %>
<%= f.text_field :est_days_ia, :class => 'num' %>

<%= f.label 'Est Days Legal' %>
<%= f.text_field :est_days_legal, :class => 'num' %>
<div class="spacer"></div>
	
<% if :action == 'edit' %>
<span class="total">Total days: <%= total_resource_days %></span>
<% end -%>

  <div class="num">Budget
<span class="small">(eg. 1000)</span></div>
  <%= f.text_field :budget %>
	<div class="spacer"></div>

</div>

<p>Traffic and Revenue Estimates</p>

<%= f.label :traffic_estimate %>
<%= f.text_field :traffic_estimate %>

<%= f.label :revenue_estimate %>
<%= f.text_field :revenue_estimate %>

<div class="spacer"></div>


<p>People</p>
<%= f.label 'Tech Point of Contact' %>
<%= f.text_field :poc_tech %>

<%= f.label 'Business Point of Contact' %>
<%= f.text_field :poc_business %>
<div class="spacer"></div>


<p>Attach a document</p>
<%= f.file_field :document %>
<div class="spacer"></div>

<%= f.submit "Send", :class => 'mf_button' %>
<div class="spacer"></div>
<% end %>