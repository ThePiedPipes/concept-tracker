<%= link_to_next_concept %>
<%= link_to_previous_concept %>

<h1><%=h @concept.title %></h1>
<div class="status">
	<b>Status:</b>
	<% if @concept.status == 'Approved' %>
  		<div class="status" style="background-color:#99FF99;">
	<% elsif @concept.status == 'Rejected' %>
		<div class="status" style="background-color:#FF9999;">
	<% elsif @concept.status == 'With Compliance' %>
		<div class="status" style="background-color:#FFFFCC;">
	<% else %>
		<div>
	<% end -%>
	  <%=h @concept.status %>
		</div>
</div>
<% unless @concept.document_file_name.nil? %>
<div id="attachment">
	Attachment:
	<%= link_to @concept.document_file_name, @concept.document.url %>
</div>
<% end -%>

<div id="right_float">
	<%=h @concept.approval_meeting.strftime('%D')  %>
</div>
<p>
  <b>Summary:</b>
  <%=h @concept.summary %>
</p>

<p>
  <b>Objectives:</b>
  <%=h @concept.objectives %>
</p>

<p>
  <b>Vertical:</b>
  <%=h @concept.vertical %>
</p>

<p>
  <b>Deadline:</b>
  <%=h @concept.deadline %>
</p>

<div id="costs">
	<span>Total resource days requested: <%=h @concept.total_resource_days %></span>
</div>

<p>
  <b>Budget:</b>
  <%=h @concept.budget %>
</p>

<div id="checklist">
	<h3>Department checks</h3>
	<% if !@concept.consulted_legal %>
	<span class="red">
	<% else -%>
	<span>
	<% end -%>
	 Consulted legal: 
	  <%=h !@concept.consulted_legal ? "N" : "Y" %>
	</span>
	
	<% if !@concept.consulted_marketing %>
	<span class="red">
	<% else -%>
	<span>
	<% end -%>
	 Consulted marketing: 
	  <%=h !@concept.consulted_marketing ? "N" : "Y" %>
	</span>
</div>



<div class="spacer">
	
</div>

<%= render :partial => 'comments' %>



<%= link_to 'Edit', edit_concept_path(@concept) %> | <%= link_to 'Back', concepts_path %>