<h2>Latest Concepts</h2>

<div id="filters">
	<ul>
		<li><%= link_to_unless_current "All", concepts_path, :filter => ""  %></li>
		<li><%= link_to_unless_current "Unapproved Only", concepts_path( :filter => "unapproved"), :filter => "approved" %></li>
		<li><%= link_to_unless_current "Approved Only", concepts_path( :filter => "approved"), :filter => "unapproved"  %></li>
		<li><%= link_to_unless_current "Completed Only", concepts_path( :filter => "completed"), :filter => "completed"  %></li>
	</ul>
</div>

<div id="dashboard">
<table>
  <tr class="top">
	<th>Title</th>
	<th>Owner</th>
    <th>Created</th>
    <th>Vertical</th>
    <th>Status</th>
    <th>Deadline</th>
    <th>Budget</th>
  </tr>



  

<% if !@concepts.blank? %>
	<% for concept in @concepts %>
	  	<% if concept.status == 'Approved' %>
	  		<tr style="background-color:#99FF99;">
		<% elsif concept.status == 'Rejected' %>
			<tr style="background-color:#FF9999;">
		<% elsif concept.status == 'With Compliance' %>
			<tr style="background-color:#FFFFCC;">
		<% else %>
			<tr>
		<% end -%>
	    <td><%= link_to "#{concept.title}", concept_path(concept) %></td>
		<td><%= link_to concept.owner.login, user_path(concept.owner)  %></td>
		<td><%=h concept.created_at.strftime('%b %d %y') %></td>
	    <td><%=h concept.vertical %></td>
	    <td><%=h concept.status %></td>
	    <td><%=h concept.deadline %></td>
	    <td><%=h concept.budget %></td>
	  </tr>


	<% end %>
<% else %>
	<%= link_to "Be the first to create a concept", new_concept_path %>
<% end %>
</table>
<div id="pagination">
	<%= will_paginate @concepts %>
</div>
</div>