<h2>Admin Dashboard</h2>
<table>
	<h4>Total Concepts this month: <%= Concept.recently_added.count %></h4>
	
	<thead>
		<tr>
			<th scope="col">Name</th>
			<th scope="col">Created</th>
		</tr>
	</thead>

	<% if !@concepts_awaiting_approval.blank? %>
	  <% for concept in @concepts_awaiting_approval %>
	<tr>
		<td><%= link_to(concept.title, concept_path(concept)) %></td>
		<td><%= concept.created_at.strftime('%D %T') %></td>	
	</tr>
	  <% end %>
	<% else %>
	No concepts created yet.
	<% end %>
	
</table>
		
		
		
<table>
	<h4>Total users: <%= User.count %></h4>
	<thead>
		<tr>
			<th>Name</th>
			<th>Created</th>
		</tr>
	</thead>
<% if !@users.blank? %>
  <% for person in @users %>
<tr>
	<td><%= link_to(person.login, user_path(person)) %></td>
	<td><%= person.created_at.strftime('%D %T') %></td>
</tr>
  <% end %>
<% else %>
No users created yet.
<% end %>
</table>